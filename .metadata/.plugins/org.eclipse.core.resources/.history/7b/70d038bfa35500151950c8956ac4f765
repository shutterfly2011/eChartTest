<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <title>ECharts - Line Charts</title>
</head>
<body>
    <!-- Prepare a Dom with size (width and height) for ECharts -->
    <h1>Chart start</h1>
    <div id="lineChart" style="height:400px"></div>
    <!-- ECharts import -->
    <script src="http://echarts.baidu.com/build/dist/echarts.js"></script>
    <h1>Chart end</h1>
    <script type="text/javascript">
	    // configure for module loader
	    require.config({
	        paths: {
	            echarts: 'http://echarts.baidu.com/build/dist'
	        }
	    });
    
		require(
			[
			 'echarts',
			 'echarts/chart/line'
			 ],
			 function(ec){
				var myChart = ec.init(document.getElementById('lineChart'));
				option = {
					    title : {
					        text : '时间坐标折线图',
					        subtext : 'dataZoom支持'
					    },
					    tooltip : {
					    	show: true,
					        trigger: 'item',
					        formatter : function (params) {
					            var date = new Date(params.value[0]);
					            data = date.getFullYear() + '-'
					                   + (date.getMonth() + 1) + '-'
					                   + date.getDate() + ' '
					                   + date.getHours() + ':'
					                   + date.getMinutes();
					            return data + '<br/>'
					                   + params.value[1] + ', ' 
					                   + params.value[2];
					            //alert( data);
					        }
					    },
					    toolbox: {
					        show : true,
					        feature : {
					            mark : {show: true},
					            dataView : {show: true, readOnly: false},
					            restore : {show: true},
					            saveAsImage : {show: true}
					        }
					    },
					    dataZoom: {
					        show: true,
					        start : 70
					    },
					    legend : {
					        data : ['series1']
					    },
					    grid: {
					        y2: 80
					    },
					    xAxis : [
					        {
					            type : 'time',
					            splitNumber:10
					        }
					    ],
					    yAxis : [
					        {
					            type : 'value'
					        }
					    ],
					    series : [
					        {
					            name: 'series1',
					            type: 'line',
					            //showAllSymbol: true,
					            //symbolSize: function (value){
					            //    return Math.round(value[2]/10) + 2;
					            //},
					            data: (function () {
					                var d = [];
					                var len = 0;
					                var now = new Date();
					                var value;
					                while (len++ < 2000) {
					                    d.push([
					                        new Date(2015, 9, 1, 0, len*5),
					                        //(Math.random()*30).toFixed(0) - 0,
					                        (Math.random()*10).toFixed(0) - 0
					                    ]);
					                }
					                return d;
					            })()
					        }
					    ]
					};
				myChart.setOption(option)
			}
		); 	
    </script>
</body>