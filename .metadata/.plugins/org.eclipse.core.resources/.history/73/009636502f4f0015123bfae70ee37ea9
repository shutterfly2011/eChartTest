<!DOCTYPE html>
<html>
<head>
<meta charset="ISO-8859-1">
<title>eChart Gauge</title>
</head>
<body>
	<div id = "main" style="height:400px"></div>
	<!-- <script src="../eharts.js"></script>  -->
	<script src="http://echarts.baidu.com/build/eharts.js"></script>
	<script type="text/javascript">
		//configure the module loader
		require.config(
			{
				paths:{
					echarts: 'http://echarts.baidu.com/build/dist'
				}
			}		
		);
		//use:
		require(
			[
			 'echarts', 'echarts/char/bar'
			 ],
			 function(ec){
				var myChart = ec.init(document.getElementById('main'));
				var option = {
					tooltip:{show:true},
					legend:{
						data:['Sales']
					},
					xAxis:[
						{
							type:'category',
							data:["shirts", "sweaters","chiffon shirts","pants","high heels", "socks"]
						}
					       ],
					yAxis:[
					       {
					    	   type:'value'
					       }
					       ],
					series:[
					        {
					        	"name":"Sales",
					        	"type":"bar",
					        	"data":[5,20,40,10,10,20]
					        }
					        ]
				};
				
				//load data into echarts instance
				myChart.setOption(option);
				
			}
		);
	</script>
</body>
</html>